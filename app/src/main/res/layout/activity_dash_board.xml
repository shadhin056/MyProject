<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DashBoardActivity">
<LinearLayout
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/txtName"
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:textStyle="bold"
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>

        <TextView
            android:id="@+id/txtBalance"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textColor="#3d3b3b"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </TextView>
        <TextView
            android:textSize="20sp"
            android:textColor="#3d3b3b"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </TextView>
        <Button
            android:id="@+id/btnCashIn"
            android:text="Cash In"
            android:background="@drawable/mybutton"
            android:layout_width="220dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/btnCashOut"
            android:text="Cash out"
            android:background="@drawable/mybutton"
            android:layout_width="220dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/btnFT"
            android:text="Fund Transfer"
            android:background="@drawable/mybutton"
            android:layout_width="220dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/btnAgRecharge"
            android:text="Agent Rechange"
            android:background="@drawable/mybutton"
            android:layout_width="220dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/btnAgWithDraw"
            android:text="Agent Withdraw"
            android:background="@drawable/mybutton"
            android:layout_width="220dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:padding="10dp"
            android:layout_height="wrap_content">
        </Button>

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/mybutton"
            android:padding="10dp"
            android:text="Logout"></Button>

    </LinearLayout>
</LinearLayout>
</LinearLayout>